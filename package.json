{
    "name": "your-theme-name",
    "description": "Your sweet description",
    "version": "0.0.1",
    "engines": {
        "ghost": ">=3.0.0",
        "ghost-api": "v3"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot-desktop.jpg",
        "mobile": "assets/screenshot-mobile.jpg"
    },
    "scripts": {
        "dev": "gulp",
        "zip": "gulp zip",
        "test": "gulp test",
        "test:ci": "gscan --fatal --verbose .",
        "build-prod": "gulp build_prod",
        "preship": "yarn test",
        "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; else echo \"Uncomitted changes found.\" && exit 1; fi",
        "postship": "git fetch && gulp release"
    },
    "author": {
        "name": "Your Name",
        "email": "your@email.com",
        "url": "https://example.me"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            ""
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": "REPO_URL"
    },
    "bugs": "REPO_URL/issues",
    "contributors": "REPO_URL/graphs/contributors",
    "devDependencies": {
        "@fullhuman/postcss-purgecss": "^2.1.0",
        "@tryghost/release-utils": "0.5.0",
        "autoprefixer": "9.7.5",
        "beeper": "2.0.0",
        "browser-sync": "^2.26.7",
        "chalk": "^4.0.0",
        "cssnano": "4.1.10",
        "fancy-log": "^1.3.3",
        "gscan": "3.4.0",
        "gulp": "4.0.2",
        "gulp-concat": "2.6.1",
        "gulp-postcss": "8.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "5.0.1",
        "inquirer": "7.1.0",
        "lodash": "^4.17.15",
        "plugin-error": "^1.0.1",
        "postcss-color-function": "4.1.0",
        "postcss-custom-properties": "9.1.1",
        "postcss-easy-import": "3.0.0",
        "pump": "3.0.0",
        "tailwindcss": "^1.2.0"
    },
    "browserslist": [
        "defaults"
    ],
    "config": {
        "posts_per_page": 25,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1000
            },
            "xl": {
                "width": 2000
            }
        }
    }
}
